<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tnats_mobile.Views.LoginPage" >
    <ContentPage.Content>
        <StackLayout Padding="10,0,10,0" VerticalOptions="Center">
            <Label x:Name="Lbl_Username">Username</Label>
            <Entry x:Name="Entry_Username" Placeholder="Username"/>
            <Label x:Name="Lbl_Password"></Label>
            <Entry x:Name="Entry_Password" IsPassword="True" Placeholder="Password"/>
            <Button x:Name="Btn_Login" VerticalOptions="Center" Text="Login" Clicked="LoginProcedure" BackgroundColor="DarkSeaGreen"/>
            <Label x:Name="messageLabel" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>