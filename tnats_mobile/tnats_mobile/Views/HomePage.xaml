<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tnats_mobile.Views.HomePage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout x:Name="stackButtons"  Orientation="Horizontal" BackgroundColor="DarkSeaGreen">
                <Button x:Name="btnLogout" Text="Logout" HorizontalOptions="EndAndExpand" Clicked="OnLogoutButtonClicked" BackgroundColor="DarkSeaGreen"></Button>
            </StackLayout>
            <Label Text="TNATS Sightings App!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button x:Name="Btn_Login" VerticalOptions="Center" Text="Take Picture" BackgroundColor="DarkSeaGreen" Clicked="AddNewItemClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>